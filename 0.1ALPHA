    <title>Kamie≈Ñ, Papier, No≈ºyce</title> <!-- Tytu≈Ç strony wy≈õwietlany w przeglƒÖdarce -->
    <style>
        /* Og√≥lne ustawienia dla ca≈Çej strony */
        body {
            font-family: Arial, sans-serif; /* Ustawiamy rodzinƒô czcionek na Arial */
            background-color: #f0f0f0; /* Ustawiamy jasnoszare t≈Ço dla strony */
            color: #333; /* Ustawiamy ciemny kolor tekstu */
            margin: 0; /* Usuwamy domy≈õlne marginesy */
            padding: 0; /* Usuwamy domy≈õlne paddingi */
            display: flex; /* U≈ºywamy Flexbox do rozmieszczenia element√≥w */
            justify-content: center; /* Ustawiamy zawarto≈õƒá na ≈õrodku */
            align-items: center; /* Ustawiamy zawarto≈õƒá na ≈õrodku pionowo */
            height: 100vh; /* Wysoko≈õƒá strony na 100% wysoko≈õci widoku */
        }

        /* Ustawienia kontenera dla ca≈Çej gry */
        .game-container {
            background-color: #fff; /* Ustawiamy bia≈Çe t≈Ço dla kontenera gry */
            padding: 20px; /* Dodajemy padding do wnƒôtrza kontenera */
            border-radius: 10px; /* ZaokrƒÖglamy rogi kontenera */
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1); /* Dodajemy lekki cie≈Ñ dla kontenera */
            width: 350px; /* Ustawiamy szeroko≈õƒá kontenera */
            text-align: center; /* Centrujemy tekst w kontenerze */
        }

        /* Ustawienia nag≈Ç√≥wka */
        h1 {
            font-size: 24px; /* Ustawiamy rozmiar czcionki na 24px */
            margin-bottom: 20px; /* Dodajemy margines poni≈ºej nag≈Ç√≥wka */
            color: #333; /* Ustawiamy kolor tekstu na ciemnoszary */
        }

        /* Ustawienia dla wybory gracza i komputera */
        #player-choice, #computer-choice {
            font-size: 18px; /* Ustawiamy rozmiar czcionki na 18px */
            color: #555; /* Ustawiamy kolor tekstu na szary */
            margin-top: 10px; /* Dodajemy margines g√≥rny */
        }

        /* Ustawienia dla wyniku gry */
        #game-result {
            font-size: 22px; /* Ustawiamy rozmiar czcionki na 22px */
            font-weight: bold; /* Ustawiamy pogrubienie tekstu */
            margin-top: 20px; /* Dodajemy margines g√≥rny */
        }

        /* Ustawienia przycisk√≥w wyboru (Kamie≈Ñ, Papier, No≈ºyce) */
        button {
            background-color: #4CAF50; /* Ustawiamy zielone t≈Ço dla przycisk√≥w */
            color: white; /* Ustawiamy bia≈Çy kolor tekstu */
            font-size: 16px; /* Ustawiamy rozmiar czcionki na 16px */
            padding: 10px 20px; /* Dodajemy padding wewnƒôtrzny przycisk√≥w */
            border: none; /* Usuwamy obramowanie */
            border-radius: 5px; /* ZaokrƒÖglamy rogi przycisk√≥w */
            cursor: pointer; /* Zmieniamy kursor na wska≈∫nik po najechaniu na przycisk */
            transition: background-color 0.3s; /* Dodajemy efekt przej≈õcia do zmiany t≈Ça */
            margin: 5px; /* Dodajemy margines do przycisk√≥w */
        }

        /* Efekt na przyciskach po najechaniu */
        button:hover {
            background-color: #45a049; /* Zmiana t≈Ça na ciemniejszy zielony po najechaniu */
        }

        /* Ustawienia dla historii gry */
        #history-list {
            margin-top: 30px; /* Dodajemy margines g√≥rny */
            padding: 0; /* Usuwamy padding */
            list-style-type: none; /* Usuwamy domy≈õlne punkty listy */
        }

        #history-list li {
            font-size: 14px; /* Ustawiamy mniejszy rozmiar czcionki dla historii */
            color: #777; /* Ustawiamy szary kolor tekstu */
            margin-bottom: 10px; /* Dodajemy margines dolny miƒôdzy elementami */
        }

        /* Ustawienia dla wynik√≥w (punkty gracza i komputera) */
        #player-score, #computer-score {
            font-size: 18px; /* Ustawiamy rozmiar czcionki na 18px */
            font-weight: bold; /* Ustawiamy pogrubienie tekstu */
            margin-top: 10px; /* Dodajemy margines g√≥rny */
        }
    </style>
</head>
<body>
    <div class="game-container"> <!-- Kontener dla gry -->
        <h1>Kamie≈Ñ, Papier, No≈ºyce</h1> <!-- Nag≈Ç√≥wek gry -->
        <p>Wybierz jednƒÖ z opcji, aby zagraƒá przeciwko komputerowi!</p> <!-- Instrukcja dla gracza -->
        <div class="choices"> <!-- Kontener na przyciski wyboru -->
            <button onclick="playGame('rock')">ü™® Kamie≈Ñ</button> <!-- Przycisk dla wyboru "Kamie≈Ñ" -->
            <button onclick="playGame('paper')">üìÑ Papier</button> <!-- Przycisk dla wyboru "Papier" -->
            <button onclick="playGame('scissors')">‚úÇ No≈ºyce</button> <!-- Przycisk dla wyboru "No≈ºyce" -->
        </div>
        <h2>Wynik gry:</h2> <!-- Nag≈Ç√≥wek sekcji wynik√≥w -->
        <p id="player-choice">Tw√≥j wyb√≥r: -</p> <!-- Wy≈õwietlenie wyboru gracza -->
        <p id="computer-choice">Wyb√≥r komputera: -</p> <!-- Wy≈õwietlenie wyboru komputera -->
        <p id="game-result">Wynik: -</p> <!-- Wy≈õwietlenie wyniku gry -->
        <h2>Wyniki</h2> <!-- Nag≈Ç√≥wek tablicy wynik√≥w -->
        <p id="player-score">Tw√≥j wynik: 0</p> <!-- Wy≈õwietlenie wyniku gracza -->
        <p id="computer-score">Wynik komputera: 0</p> <!-- Wy≈õwietlenie wyniku komputera -->
        <button onclick="resetGame()">üîÑ Resetuj grƒô</button> <!-- Przycisk resetujƒÖcy grƒô -->
        <h2>Historia gier</h2> <!-- Nag≈Ç√≥wek historii gier -->
        <ul id="history-list"> <!-- Lista wynik√≥w gier -->
            <!-- Tutaj bƒôdƒÖ dodawane kolejne wyniki gier -->
        </ul>
    </div>

    <script>
        // Funkcja do rozpoczynania gry i obs≈Çugi wyboru gracza
        function playGame(playerChoice) {
            const choices = ['rock', 'paper', 'scissors']; // Tablica z mo≈ºliwymi wyborami komputera
            const computerChoice = choices[Math.floor(Math.random() * 3)]; // Losowanie wyboru komputera

            document.getElementById('player-choice').textContent = `Tw√≥j wyb√≥r: ${playerChoice}`; // Wy≈õwietlanie wyboru gracza
            document.getElementById('computer-choice').textContent = `Wyb√≥r komputera: ${computerChoice}`; // Wy≈õwietlanie wyboru komputera

            const result = determineWinner(playerChoice, computerChoice); // Obliczanie wyniku gry
            document.getElementById('game-result').textContent = `Wynik: ${result}`; // Wy≈õwietlanie wyniku gry
            updateScore(result); // Aktualizacja punkt√≥w
            addToHistory(playerChoice, computerChoice, result); // Dodawanie historii rozgrywki
        }

        // Funkcja do okre≈õlania wyniku gry
        function determineWinner(playerChoice, computerChoice) {
            if (playerChoice === computerChoice) return 'Remis'; // Remis
            if ((playerChoice === 'rock' && computerChoice === 'scissors') ||
                (playerChoice === 'paper' && computerChoice === 'rock') ||
                (playerChoice === 'scissors' && computerChoice === 'paper')) {
                return 'Wygra≈Çe≈õ!'; // Gracz wygrywa
            }
            return 'Przegra≈Çe≈õ!'; // Komputer wygrywa
        }

        // Funkcja do aktualizacji wynik√≥w gry
        function updateScore(result) {
            let playerScore = parseInt(document.getElementById('player-score').textContent.split(': ')[1]); // Pobranie aktualnego wyniku gracza
            let computerScore = parseInt(document.getElementById('computer-score').textContent.split(': ')[1]); // Pobranie aktualnego wyniku komputera

            if (result === 'Wygra≈Çe≈õ!') playerScore++; // Zwiƒôkszenie punkt√≥w gracza
            else if (result === 'Przegra≈Çe≈õ!') computerScore++; // Zwiƒôkszenie punkt√≥w komputera

            document.getElementById('player-score').textContent = `Tw√≥j wynik: ${playerScore}`; // Aktualizacja wyniku gracza
            document.getElementById('computer-score').textContent = `Wynik komputera: ${computerScore}`; // Aktualizacja wyniku komputera
        }

        // Funkcja do dodawania wynik√≥w gry do historii
        function addToHistory(playerChoice, computerChoice, result) {
            const historyList = document.getElementById('history-list'); // Pobranie listy wynik√≥w
            const listItem = document.createElement('li'); // Tworzenie nowego elementu listy
            listItem.textContent = `Gracz: ${playerChoice}, Komputer: ${computerChoice} - ${result}`; // Ustawienie tre≈õci elementu listy
            historyList.appendChild(listItem); // Dodanie elementu listy do historii
        }

        // Funkcja do resetowania gry
        function resetGame() {
            document.getElementById('player-score').textContent = 'Tw√≥j wynik: 0'; // Resetowanie punkt√≥w gracza
            document.getElementById('computer-score').textContent = 'Wynik komputera: 0'; // Resetowanie punkt√≥w komputera
            document.getElementById('player-choice').textContent = 'Tw√≥j wyb√≥r: -'; // Resetowanie wyboru gracza
            document.getElementById('computer-choice').textContent = 'Wyb√≥r komputera: -'; // Resetowanie wyboru komputera
            document.getElementById('game-result').textContent = 'Wynik: -'; // Resetowanie wyniku gry
            document.getElementById('history-list').innerHTML = ''; // Czyszczenie historii gier
        }
    </script>
</body>
</html>
